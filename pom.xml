<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>net.anotheria</groupId>
		<artifactId>ano-doc-parent</artifactId>
		<version>2.1.1</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>net.anotheria</groupId>
	<artifactId>ano-site</artifactId>
	<version>2.1.5</version>
	<name>anotheria.net site engine</name>

	<dependencies>
		<dependency>
			<groupId>net.anotheria</groupId>
			<artifactId>ano-util</artifactId>
			<version>1.0.10</version>
		</dependency>
		<dependency>
			<groupId>net.anotheria</groupId>
			<artifactId>ano-tags</artifactId>
			<version>1.0.4</version>
		</dependency>
		<dependency>
			<groupId>net.anotheria</groupId>
			<artifactId>ano-doc</artifactId>
			<version>2.1.2</version>
		</dependency>
		<dependency>
			<groupId>net.anotheria</groupId>
			<artifactId>ano-prise</artifactId>
			<version>1.0.9</version>
		</dependency>
		<dependency>
			<groupId>net.anotheria</groupId>
			<artifactId>ano-plass</artifactId>
			<version>1.0.2</version>
		</dependency>
		<dependency>
			<groupId>net.anotheria</groupId>
			<artifactId>ano-web</artifactId>
			<version>1.0.6</version>
		</dependency>
		<dependency>
			<groupId>net.anotheria</groupId>
			<artifactId>ano-maf</artifactId>
			<version>1.0.2</version>
		</dependency>
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>jsp-api</artifactId>
			<version>2.2</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>${project.basedir}/html</directory>
			</resource>
			<resource>
				<directory>${project.basedir}/etc/def</directory>
				<includes>
					<include>
						**/*as-*.xml
					</include>
				</includes>
				<targetPath>etc/def/as</targetPath>
			</resource>
			<resource>
				<directory>${project.basedir}/java</directory>
				<includes>
					<include>**/*.jsp</include>
				</includes>
			</resource>
		</resources>
	    <plugins>
	      <plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-jar-plugin</artifactId>
	        <version>2.3.1</version>
	        <configuration>
	          <excludes>
	            <exclude>**/gen/**</exclude>
	          </excludes>
	        </configuration>
	      </plugin>
	    </plugins>
	</build>

	<scm>
		<url>svn:svn://svn.anotheria.net/opensource/ano-site/tags/ano-site-2.1.5</url>
		<connection>scm:svn:svn://svn.anotheria.net/opensource/ano-site/tags/ano-site-2.1.5</connection>
		<developerConnection>scm:svn:svn://svn.anotheria.net/opensource/ano-site/tags/ano-site-2.1.5</developerConnection>
	</scm>
</project>