<!-- Wizard expert mode view :)-->
<view name="Wizard" title="Wizard" requiredroles="admin,developer,editor">
    <sections>
        <!-- Wizard Document section-->
        <section title="WizardDef" type="module">
            <module>ASWizardData</module>
            <document>WizardDef</document>
            <filter name="AZ" field="name"/>
            <elements>
                <element type="field" name="id" comparable="true">
                    <decorator name="idToA">
                        <rule>3</rule>
                    </decorator>
                </element>
                <element type="field" name="name" comparable="default">
                    <decorator name="editLink"/>
                </element>
                <element type="field" name="wizardSteps" comparable="true"/>
                <element type="field" name="navigation" comparable="true"/>
                <element type="field" name="handler" comparable="true"/>
                <element type="field" name="menuRenderingEnabled" comparable="true"/>
                <element type="field" name="navigationRenderingEnabled" comparable="true"/>
                <element type="field" name="wizardCancelRedirectUrl" comparable="true"/>
                <element type="field" name="wizardFinishRedirectUrl" comparable="true"/>

                <element type="function" name="edit"/>
                <element type="function" name="duplicate"/>
                <element type="function" name="deleteWithConfirmation"/>
                <element type="function" name="lock"/>
                <element type="function" name="unlock"/>
                <element type="function" name="version"/>
            </elements>
            <dialog name="Edit" title="Edit Wizard">
                <elements>
                    <element type="empty"/>
                    <element type="field" name="id" readonly="true"/>
                    <element type="field" name="name"/>
                    <element type="field" name="wizardSteps"/>
                    <element type="field" name="handler"/>
                    <element type="field" name="navigation"/>
                    <element type="field" name="menuRenderingEnabled"/>
                    <element type="field" name="navigationRenderingEnabled"/>
                    <element type="field" name="wizardCancelRedirectUrl"/>
                    <element type="field" name="wizardFinishRedirectUrl"/>
                    <element type="empty"/>
                    <element type="list">
                        <element type="function" name="updateAndClose"/>
                        <element type="function" name="updateAndStay"/>
                        <element type="function" name="cancel"/>
                        <element type="function" name="lock"/>
                        <element type="function" name="unlock"/>
                    </element>
                </elements>
            </dialog>
        </section>


        <!-- WizardStepNavigation section -->
        <section title="WizardNavigation" type="module">
            <module>ASWizardData</module>
            <document>WizardNavigation</document>
            <filter name="AZ" field="name"/>
            <elements>
                <element type="field" name="id" comparable="true">
                    <decorator name="idToA">
                        <rule>3</rule>
                    </decorator>
                </element>
                <element type="field" name="name" comparable="default">
                    <decorator name="editLink"/>
                </element>
                <element type="field" name="allowCancellation" comparable="true"/>
                <element type="field" name="allowBackStep" comparable="true"/>

                <element type="function" name="edit"/>
                <element type="function" name="duplicate"/>
                <element type="function" name="deleteWithConfirmation"/>
                <element type="function" name="lock"/>
                <element type="function" name="unlock"/>
                <element type="function" name="version"/>
            </elements>
            <dialog name="Edit" title="Edit WizardStepNavigation">
                <elements>
                    <element type="empty"/>
                    <element type="field" name="id" readonly="true"/>
                    <element type="field" name="name"/>
                    <element type="field" name="allowCancellation"/>
                    <element type="field" name="allowBackStep"/>
                    <element type="empty"/>
                    <element type="list">
                        <element type="function" name="updateAndClose"/>
                        <element type="function" name="updateAndStay"/>
                        <element type="function" name="cancel"/>
                        <element type="function" name="lock"/>
                        <element type="function" name="unlock"/>
                    </element>
                </elements>
            </dialog>
        </section>

        <!--   &lt;!&ndash; WizardHandler section&ndash; -->
        <section title="WizardHandlerDef" type="module">
            <module>ASWizardData</module>
            <document>WizardHandlerDef</document>
            <filter name="AZ" field="name"/>
            <elements>
                <element type="field" name="id" comparable="true">
                    <decorator name="idToA">
                        <rule>3</rule>
                    </decorator>
                </element>
                <element type="field" name="name" comparable="default">
                    <decorator name="editLink"/>
                </element>
                <element type="field" name="clazz" comparable="true"/>

                <element type="function" name="edit"/>
                <element type="function" name="duplicate"/>
                <element type="function" name="deleteWithConfirmation"/>
                <element type="function" name="lock"/>
                <element type="function" name="unlock"/>
                <element type="function" name="version"/>
            </elements>
            <dialog name="Edit" title="Edit WizardHandler">
                <elements>
                    <element type="empty"/>
                    <element type="field" name="id" readonly="true"/>
                    <element type="field" name="name"/>
                    <element type="field" name="clazz"/>
                    <element type="empty"/>
                    <element type="list">
                        <element type="function" name="updateAndClose"/>
                        <element type="function" name="updateAndStay"/>
                        <element type="function" name="cancel"/>
                        <element type="function" name="lock"/>
                        <element type="function" name="unlock"/>
                    </element>
                </elements>
            </dialog>
        </section>

    </sections>
</view>